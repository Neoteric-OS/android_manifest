<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Build -->
  <remove-project name="platform/build_repo" />
  <project path="build/make" name="android_build" remote="neoteric" >
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <remove-project name="platform/build/soong" />
  <project path="build/soong" name="android_build_soong" remote="neoteric" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Bootable -->
  <remove-project name="platform/bootable/recovery" />
  <project path="bootable/recovery" name="android_bootable_recovery" remote="neoteric" />

  <!-- Device -->
  <remove-project name="device/qcom/common" />
  <project path="device/qcom/common" name="android_device_qcom_common" remote="neoteric" >
    <linkfile dest="vendor/qcom/build/tasks/generate_extra_images.mk" src="generate_extra_images.mk"/>
  </project>
  
  <!-- External -->
  <remove-project name="platform/external/gptfdisk" />
  <project path="external/gptfdisk" name="android_external_gptfdisk" remote="neoteric" />
  
  <!-- Packages -->
  <project path="packages/apps/Aperture" name="android_packages_apps_Aperture" remote="neoteric" />
  <remove-project name="platform/packages/apps/Settings" />
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" remote="neoteric" />

  <!-- Prebuilts -->
  <remove-project name="platform/prebuilts/r8" />
  <project path="prebuilts/r8" name="android_prebuilts_r8" remote="neoteric" clone-depth="1" />

  <!-- Modules -->
  <remove-project name="platform/packages/modules/Bluetooth" />
  <project path="packages/modules/Bluetooth" name="android_packages_modules_Bluetooth" remote="neoteric" />

  <!-- System -->
  <remove-project name="platform/system/core" />
  <project path="system/core" name="system_core" remote="neoteric" />
  <remove-project name="platform/system/sepolicy" />
  <project path="system/sepolicy" name="android_system_sepolicy" remote="neoteric" />

  <!-- Vendor (Neoteric) -->
  <project path="vendor/neoteric" name="android_vendor_neoteric" remote="neoteric" />
  <project path="vendor/neoteric/prebuilt" name="android_vendor_neoteric_prebuilt" remote="neoteric" />
  <project path="vendor/google/pixel" name="android_vendor_google_pixel" remote="neoteric" clone-depth="1" />

</manifest>
