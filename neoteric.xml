<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Build -->
  <remove-project name="platform/build_repo" />
  <project path="build/make" name="android_build" remote="neoteric" >
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <remove-project name="platform/build/soong" />
  <project path="build/soong" name="android_build_soong" remote="neoteric" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Device -->
  <remove-project name="device/qcom/common" />
  <project path="device/qcom/common" name="android_device_qcom_common" remote="neoteric" >
    <linkfile dest="vendor/qcom/build/tasks/generate_extra_images.mk" src="generate_extra_images.mk"/>
  </project>

  <!-- Vendor (Neoteric) -->
  <project path="vendor/neoteric" name="android_vendor_neoteric" remote="neoteric" />
  <project path="vendor/google/pixel" name="android_vendor_google_pixel" remote="neoteric" />

</manifest>
